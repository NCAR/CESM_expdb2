<body style="text-align: left">
 <div align="center">
   [% IF validstatus.status == 0 %]
    <span class="error">Add a Case Note Error:</span>
    <p>
	[% validstatus.message %]
    </p>
    [% END %]

    <h3>Add a new case note for [% case.casename %]</h3>

      <form id="caseAddNoteForm" action="/expdb2.0/cgi-bin/caseNotes.cgi" method="POST">
        <input type="hidden" name="action" value="addNoteProc"/>
        <input type="hidden" name="case_id" value="[% case.case_id %]"/>
	<textarea name="note" cols="100" rows="5" required></textarea>
	<br/>
	<input id="submit" class="button" type="submit" value="Submit"/>
    	<input type="reset"/>
	<input class="button" type="button" value="Cancel" onclick="window.close(); if (window.opener && !window.opener.closed) { window.opener.location.reload();}"/>      
      </form>
  </div>
</body>
</html>
