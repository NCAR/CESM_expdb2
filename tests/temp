
$fields{'model_run'} = $dbh->quote($json->{'model_run'});
push @stat_keys 'model_run'
$fields{'st_archive'} = $dbh->quote($json->{'st_archive'});
push @stat_keys 'st_archive'
$fields{'lt_archive'} = $dbh->quote($json->{'lt_archive'});
push @stat_keys 'lt_archive'

# get the postprocessing statuses, if they exist
if ($fields{'postprocess'} == 'true') {
    $fields{'timeseries'} = $dbh->quote($json->{'timeseries'});
    push @stat_keys 'timeseries'
    $fields{'cmorixe'}    = $dbh->quote($json->{'cmorize'});
    push @stat_keys 'cmorize'
    $files{'lnd_regrid'} = $dbh->quote($json->{'lnd_regrid'});
    push @stat_keys 'lnd_regrid';
    $files{'atm_regrid'} = $dbh->quote($json->{'atm_regrid'});
    push @stat_keys 'lnd_regrid';
    foreach my $comp (@comps) {
	# get the  averages
	$key = $comp . "_averages";
	$fields{$key} = $dbh->quote($json->{$key});
	push @stat_keys $key

	# get the diagnostics
	$key = $comp . "_diagnostics";
	$fields{$key} = $dbh->quote($json->{$key});
	push @stat_keys $key
    }
}